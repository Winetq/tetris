<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Tetris Suite" verbose="1">
    <test name="Tetris Tests">
        <groups>
            <define name="all">
                <include name="blockShapes"/>
                <include name="blocks"/>
                <include name="jar"/>
                <include name="greeting"/>
            </define>
            <run>
                <include name="all"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.prejap.tetris.block.OBlockTest"/>
            <class name="com.epam.prejap.tetris.block.TBlockTest"/>
            <class name="com.epam.prejap.tetris.JARArchiveIT"/>
            <class name="com.epam.prejap.tetris.greeting.GreetingTest"/>
        </classes>
    </test>
</suite>
